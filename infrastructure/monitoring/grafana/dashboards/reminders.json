{
  "dashboard": {
    "title": "Reminders & Recurring Tasks Dashboard",
    "tags": ["phase-v", "reminders", "recurring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Reminders Scheduled per Minute",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(reminders_scheduled_total[1m])",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Reminders Triggered per Minute",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(reminders_triggered_total[1m])",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Reminder Delivery Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(reminder_delivery_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(reminder_delivery_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(reminder_delivery_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Reminder Scheduling Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(reminder_scheduling_errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Recurring Tasks Generated",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(recurring_tasks_generated_total[5m])",
            "legendFormat": "{{pattern}} - {{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Recurring Task Generation Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(recurring_task_generation_duration_seconds_bucket[5m]))",
            "legendFormat": "{{pattern}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Reminder Success Rate",
        "type": "singlestat",
        "targets": [
          {
            "expr": "sum(rate(reminders_triggered_total{status=\"success\"}[5m])) / sum(rate(reminders_triggered_total[5m])) * 100"
          }
        ],
        "format": "percent",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Active WebSocket Connections",
        "type": "singlestat",
        "targets": [
          {
            "expr": "websocket_connections_active"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 24}
      },
      {
        "id": 9,
        "title": "Task Sync Latency (p95)",
        "type": "singlestat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(task_sync_latency_seconds_bucket[5m]))"
          }
        ],
        "format": "s",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 24}
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
